#!/bin/sh
TRKNO=$(mpc status | awk 'NR==2' | awk '{print $2}')
TRKPOS=$(mpc status | awk 'NR==2' | awk '{print $3}')
TRKPERC=$(mpc status | awk 'NR==2' | awk '{print $4}')
if mpc status | grep playing >/dev/null      # If mpd is playing
    then
