#! /bin/sh
# Settings
bspc config border_width                  2
bspc config normal_border_color           "#1D2A2D"
bspc config focused_border_color          ""
bspc config window_gap                    6
bspc config top_padding                   18
bspc config single_monocle                true
bspc config borderless_monocle            true
bspc config gapless_monocle               true
bspc config pointer_follows_monitor       true
bspc config focus_follows_pointer         true
bspc config click_to_focus                false
bspc config presel_feedback_color         "$COLOR_HIGHLIGHT"

# Setup monitors
i=1
for monitor in $(bspc query -M); do
    bspc monitor $monitor \
        -n "$i" \
        -d {One,Two,Three,Four,Five,Six,Seven,Eight,Nine,Ten}
    let i++
done
unset i

# Set key binds
sxhkd &

# Status bar
al-polybar-session &

bspc wm --adopt-orphans

# Window rules
#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
bspc rule -a Nitrogen state=floating
bspc rule -a Skype state=floating
bspc rule -a Whatsie state=floating
bspc rule -a Pavucontrol state=floating
bspc rule -a Grsync state=floating
bspc rule -a Gparted state=floating
bspc rule -a Gnome-disks state=floating
bspc rule -a Gnome-calculator state=floating
bspc rule -a File-roller state=floating
bspc rule -a Python3 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
