# Borders
bspc config border_width                  2
bspc config normal_border_color           "#1D2A2D"
bspc config focused_border_color          "#61D6E8"

# Gaps & padding
bspc config window_gap                    0
bspc config top_padding                   22
bspc config bottom_padding		  0
bspc config left_padding		  0
bspc config right_padding		  0

# State settings
bspc config single_monocle                true
bspc config borderless_monocle            true
bspc config gapless_monocle               true
bspc wm --adopt-orphans

# Pointer/focus
bspc config pointer_follows_monitor       true
bspc config focus_follows_pointer         true
bspc config click_to_focus                false
bspc config presel_feedback_color         "#61D6E8"
bspc config pointer_modifier              mod1
bspc config pointer_action1               move
bspc config pointer_action2               resize_corner

# Define workspaces
bspc monitor -d '1' '2' '3' '4' '5' '6' '7' '8'

# Set key binds
sxhkd &

# Status bar
al-polybar-session &

bspc wm --adopt-orphans

# Window rules
#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
bspc rule -a Nitrogen state=floating
bspc rule -a Skype state=floating
bspc rule -a Whatsie state=floating
bspc rule -a Pavucontrol state=floating
bspc rule -a Grsync state=floating
bspc rule -a Gparted state=floating
bspc rule -a Gnome-disks state=floating
bspc rule -a Gnome-calculator state=floating
bspc rule -a File-roller state=floating
bspc rule -a Python3 state=floating
bspc rule -a Gsimplecal state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
