#!/bin/bash

RET=$(echo -e "Wallpaper\nAppearance\ndwm-bar\nMouse/Touchpad\nDisplay\nTrackpoint\nDefault-Apps\nDisks\nTask-Scheduler\nAutostart\nzsh-profile\nSystem-Updates\nGenerate-Mirrorlist\nCancel" | dmenu -p "System Management:")

case $RET in
    Wallpaper) nitrogen ;; Appearance) urxvt -e vim ~/.xsettingsd ;; dwm-bar) urxvt -e vim ~/.scripts/bin/dwm-bar ;; Mouse/Touchpad) urxvt -e sudo vim /etc/X11/xorg.conf.d/70-synaptics.conf ;; Display) urxvt -e sudo vim /etc/X11/xorg.conf.d/10-monitor.conf ;;Trackpoint) urxvt -e sudo vim /etc/udev/rules.d/10-trackpoint.rules ;; Default-Apps) urxvt -e vim ~/.config/mimeapps.liurxvt ;; Disks) gnome-disks ;; Task-Scheduler) urxvt -e fcrontab -e ;; Autostart) urxvt -e vim ~/.xinitrc ;; zsh-profile) urxvt -e vim ~/.zprofile ;; System-Updates) urxvt -e yay -Syyuu ;; Generate-Mirrorlist) mirrorlist-generator ;; *) ;; 
esac
