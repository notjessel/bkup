#!/bin/sh
export SEP="|"
export SEP1="["
export SEP2="]"
export PERC="%"
export IDENTIFIER="unicode"
export col4=""
export col1=""
# status modules #

dwm_battery () {
    CHARGE=$(cat /sys/class/power_supply/BAT0/capacity)
    STATUS=$(cat /sys/class/power_supply/BAT0/status)

    printf "%s" #"$SEP"#
    if [ "$IDENTIFIER" = "unicode" ]; then
        if [ "$STATUS" = "Charging" ]; then 
            printf "ÔÉß%s%%" "$CHARGE"
        else
            printf "üîã%s%%" "$CHARGE"
        fi
    else
        printf "BAT %s%%" "$CHARGE"
    fi
    printf "%s\n" #"$SEP2"#
}

dwm_pwrsupply () {
    PWRSUPPLY=$(cat /sys/class/power_supply/AC/online)


    if [ "$IDENTIFIER" = "unicode" ]; then
        if [ "$PWRSUPPLY" = "1" ]; then 
            printf "%s" "üîå"
        fi
    fi
}

dwm_mem () {
    
    TOTAL=$(free --giga | awk '(NR==2){ print $2 }' )
    USED=$(cat ~/.config/dwm/memused.txt) 
        
    printf "%s" "$SEP"
    if [ "$IDENTIFIER" = "unicode" ]; then
        printf "Ôãõ%s/%sGi" "$USED" "$TOTAL"
    else
        printf "Ôãõ%s/%sGi" "$USED" "$TOTAL"
    fi
    printf "%s" #"$SEP2"#
}

dwm_clock () {
    printf "%s" #"$SEP"#
    if [ "$IDENTIFIER" = "unicode" ]; then
        printf " %s" "$(date "+%l:%M%P")"
    else
        printf "DAT%s" "$(date "+%l:%M%P")"
    fi
    printf "%s\n" "$SEP"
}

dwm_date () {
    printf "%s" "$SEP"
    if [ "$IDENTIFIER" = "unicode" ]; then
        printf "üìÜ%s" "$(date "+%a|üìÖ%m/%d")"
    else
        printf "DAT%s" "$(date "+%a %m/%d")"
    fi
    printf "%s\n" #"$SEP"#
}

dwm_pulse () {
    VOL=$(pamixer --get-volume-human | tr -d '%')
 
    printf "%s"  #"$SEP"#
    if [ "$IDENTIFIER" = "unicode" ]; then
        if [ "$VOL" = "muted" ] || [ "$VOL" -eq 0 ]; then
            printf "üîá(mute)" "$PERC"
        elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
            printf "üîà%s%%" "$VOL"
        elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
            printf "üîâ%s%%" "$VOL"
        else
            printf "üîä%s%%" "$VOL"
        fi
   else
       if [ "$VOL" = "0%" ] || [ "$VOL" -eq 0 ]; then
           printf "MUTE"
       elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
           printf "VOL %s%%" "$VOL"
       elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
           printf "VOL %s%%" "$VOL"
       else
           printf "VOL %s%%" "$VOL"
       fi
    fi
    printf "%s\n" #"$SEP"#
}

dwm_cmus () {
    if ps -C cmus > /dev/null; then
        ARTIST=$(cmus-remote -Q | grep -a '^tag artist' | awk '{gsub("tag artist ", "");print}')
        TRACK=$(cmus-remote -Q | grep -a '^tag title' | awk '{gsub("tag title ", "");print}')
        TRACKNO=$(cmus-remote -Q | grep -a '^tag tracknumber' | awk '{gsub("tag tracknumber ", "");print}')
        POSITION=$(cmus-remote -Q | grep -a '^position' | awk '{gsub("position ", "");print}')
        DURATION=$(cmus-remote -Q | grep -a '^duration' | awk '{gsub("duration ", "");print}')
        STATUS=$(cmus-remote -Q | grep -a '^status' | awk '{gsub("status ", "");print}')
        SHUFFLE=$(cmus-remote -Q | grep -a '^set shuffle' | awk '{gsub("set shuffle ", "");print}')

        if [ "$IDENTIFIER" = "unicode" ]; then
            if [ "$STATUS" = "playing" ]; then
                STATUS="‚ñ∂"
            else
                STATUS="‚è∏"
            fi

            if [ "$SHUFFLE" = "true" ]; then
                SHUFFLE=" üîÄ"
            else
                SHUFFLE=""
            fi
        else
            if [ "$STATUS" = "playing" ]; then
                STATUS="PLA"
            else
                STATUS="PAU"
            fi

            if [ "$SHUFFLE" = "true" ]; then
                SHUFFLE=" S"
            else
                SHUFFLE=""
            fi
        fi
        
        printf "%s %s %s -%s " "$SEP" "$STATUS" "$TRACKNO"
        printf "%0d:%02d/" $((POSITION%3600/60)) $((POSITION%60))
        printf "%0d:%02d" $((DURATION%3600/60)) $((DURATION%60))
        printf "%s%s\n" "$SHUFFLE" #"$SEP"#
    fi
}

dwm_backlight () {
    printf "%süí°%.0f%s%s\n" "$SEP" "$(xbacklight)" "$PERC" "$SEP"
}

dwm_updates () {
    printf  "%süîÉ%s" "$SEP" "$(cat ~/.config/dwm/update-check.txt)"
}

dwm_wttr () {
    printf "üå°%s%s" "$(cat ~/.config/dwm/dwm-wttr.txt)" "$SEP"
}

# module order #
while true
do
    xsetroot -name "$(dwm_clock)$(dwm_pulse)$(dwm_cmus)$(dwm_date)$(dwm_backlight)$(dwm_wttr)$(dwm_pwrsupply)$(dwm_battery)"
done
